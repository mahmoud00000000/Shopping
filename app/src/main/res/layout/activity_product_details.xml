<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.ProductDetailsActivity"
    android:background="@color/white">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="414dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#4C585B">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="379dp"
            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="400dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="150dp"
        android:src="@drawable/pro_1"/>
    
    <TextView
        android:id="@+id/details_productTV"
        android:layout_width="300dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="450dp"
        android:text="hooded Long Sleeve Jacket Hoodie Zipper For Men"
        android:textSize="15sp"
        android:textColor="@color/black"/>
    
    <TextView
        android:textColor="@color/black"
        android:id="@+id/product_priceTV"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="530dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="350dp"
        android:text="EGP"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/price_num"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="@id/product_priceTV"
        app:layout_constraintBottom_toBottomOf="@id/product_priceTV"
        app:layout_constraintStart_toEndOf="@id/product_priceTV"
        android:layout_marginStart="5dp"
        android:text="449.00"
        android:textSize="20sp"
        android:textColor="@color/black"/>



    <TextView
        android:id="@+id/book_btn"
        android:layout_width="190dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="650dp"
        android:background="@drawable/rounded_corner_textview"
        android:text="احجز الان"
        android:textColor="@color/white"
        android:paddingTop="14dp"
        android:paddingBottom="13dp"
        android:paddingEnd="70dp"
        android:textSize="18sp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>